    <!-- Vendor js -->
    <script src="{{ asset('back/assets/js/vendor.min.js') }}"></script>

    <!-- knob plugin -->
    <script src="{{ asset('back/assets/libs/jquery-knob/jquery.knob.min.js') }}"></script>

