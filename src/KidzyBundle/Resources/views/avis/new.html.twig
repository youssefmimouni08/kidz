{% extends 'base.html.twig' %}
{% block content %}
    <section class="section bg-gradient" id="home" style="padding-bottom: 0px !important">
    </section>
    <section class="section bg-light" id="pricing">
        <div class="container-fluid">
            <div class="row justify-content-center">
                <div class="col-lg-6">
                    <div class="title text-center mb-4">
                        <h6 class="text-primary small-title"></h6>
                        <h4>Ajouter Avis</h4>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-12">
                    <div class="card-box">
                        <h4 class="header-title mt-0 mb-3"></h4>
                        {{ form_start(form, {'attr': {'class': 'form-horizontal' , 'role' : 'form' , 'novalidate': 'novalidate' }}) }}
                        <div class="form-group row">
                            {{ form_label(form.descriptionAvis ,null , {'label_attr': {'class': 'col-sm-4 col-form-label'}}) }}
                            <div class="col-sm-7">
                                {{ form_widget(form.descriptionAvis , {'attr': {'class': 'form-control' , 'placeholder': 'Donner avis'}}) }}
                            </div>
                            {{ form_errors(form.descriptionAvis) }}
                        </div>

                        <div class="form-group row">
                            <div class="offset-sm-4 col-sm-8">
                                {{ form_widget(form) }}
                                <input type="submit" class="btn btn-primary waves-effect waves-light mr-1" value="Confimer">
                                <a class="btn btn-secondary waves-effect waves-light" href="{{ path('avisF') }}">
                                    Annuler
                                </a>
                            </div>
                        </div>
                        {{ form_end(form) }}
                    </div><!-- end card-box -->
                </div><!-- end col -->
            </div>
            <!-- end row -->
        </div> <!-- container-fluid -->

        </div> <!-- content -->
        </div>
        </div>
        <!-- end container-fluid -->

    </section>
{% endblock %}
