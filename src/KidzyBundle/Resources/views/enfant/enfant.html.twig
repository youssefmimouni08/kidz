{% extends 'base.html.twig' %}
{% block content %}
    <section class="section bg-gradient" id="home" style="padding-bottom: 0px !important">
    </section>
    <section class="section bg-light" id="pricing">
        <div class="container-fluid">
            <div class="row justify-content-center">
                <div class="col-lg-6">
                    <div class="title text-center mb-4">
                        <h6 class="text-primary small-title"></h6>
                        <h4>Votre/vos Enfant (s)</h4>
                        <p class="text-muted">La liste des enfants .</p>
                    </div>
                </div>
            </div>
            <!-- end row -->

            <div class="row">
                <div class="col-xl-4">
                    <a href="{{ path('enfant_add') }}" class="btn btn-success btn-md waves-effect waves-light mb-3" data-animation="fadein" data-plugin="custommodal"
                       data-overlaySpeed="200" data-overlayColor="#36404a"><i class="mdi mdi-plus-circle-outline"></i> Ajouter votre enfant </a>
                </div><!-- end col -->
            </div>
            <!-- end row -->
            <div class="row">

                {% for enfant in parent.enfants %}


                    <div class="col-lg-4">
                        <form action="{{ path('modifier', { 'id': enfant.idEnfant }) }}">

                            <div class="pricing-plans bg-white text-center p-4 mt-4">
                                <div class="dropdown float-right">

                                    <div class="dropdown-menu dropdown-menu-right">
                                        <!-- item-->
                                        <a href="javascript:void(0);" class="dropdown-item">Action</a>
                                        <!-- item-->
                                        <a href="javascript:void(0);" class="dropdown-item">Another action</a>
                                        <!-- item-->
                                        <a href="javascript:void(0);" class="dropdown-item">Something else</a>
                                        <!-- item-->
                                        <a href="javascript:void(0);" class="dropdown-item">Separated link</a>
                                    </div>
                                </div>


                                <div>

                                    {% if enfant.imageEnfant %}

                                        <img src="{{ vich_uploader_asset(enfant ,'imageFile') | imagine_filter('thumb') }}" class="rounded-circle avatar-xl img-thumbnail mb-2" alt="profile-image">
                                    {% else%}
                                        <img src="{{ asset('images/enfants/enfant.png') | imagine_filter('thumb') }}" class="rounded-circle avatar-xl img-thumbnail mb-2" alt="profile-image">
                                    {% endif %}



                                    <div class="text-left">
                                        <p class="text-muted font-13"><strong></strong><span class="ml-2"> </span></p>

                                        <p class="text-muted font-13"><strong>Nom et pr√©nom:</strong><span class="ml-2">{{ enfant.nomEnfant}} {{ enfant.prenomEnfant }} </span></p>

                                        <p class="text-muted font-13"><strong>Classe :</strong> <span class="ml-2" value=classe1> {{ enfant.idClasse.libelleCla}}</span></p>

                                        <p class="text-muted font-13"><strong>Date de naissance :</strong> <span class="ml-2"> {{ enfant.datenEnfant }}</span></p>
                                    </div>


                                    <div class="pt-4">
                                        <input type="submit" class="btn btn-primary btn-rounded waves-effect waves-light" value="Modifier">
                                    </div>
                                </div>

                            </div>
                        </form>
                    </div> <!-- end col -->
                {% endfor %}

            </div>
        </div>
        <!-- end container-fluid -->

    </section>
{% endblock %}