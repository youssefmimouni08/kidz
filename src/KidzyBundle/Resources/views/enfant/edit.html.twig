{% extends 'baseadmin.html.twig' %}

{% block content %}

    <div class="content-page">
        <div class="content">

            <!-- Start Content-->
            <div class="container-fluid">

                <div class="row">
                    <div class="col-12">
                        <div class="card-box">
                            <h4 class="header-title mt-0 mb-3">Modifier Enfant</h4>

                            {{ form_start(edit_form, {'attr': {'class': 'form-horizontal' , 'role' : 'form' , 'novalidate': 'novalidate' }}) }}
                            <div class="form-group row">
                                {{ form_label(edit_form.imageFile ,null , {'label_attr': {'class': 'col-sm-4 col-form-label'}}) }}
                                <div class="col-sm-7">
                                    {{ form_widget(edit_form.imageFile, {'attr': {'class': 'form-control' , 'placeholder': 'Garderie' }}) }}
                                </div>
                                {{ form_errors(edit_form.imageFile) }}
                            </div>
                            <div class="form-group row">
                                {{ form_label(edit_form.nomEnfant ,null , {'label_attr': {'class': 'col-sm-4 col-form-label'}}) }}
                                <div class="col-sm-7">
                                    {{ form_widget(edit_form.nomEnfant , {'attr': {'class': 'form-control' , 'placeholder': 'Nom'}}) }}
                                </div>
                                {{ form_errors(edit_form.nomEnfant) }}
                            </div>
                            <div class="form-group row">
                                {{ form_label(edit_form.prenomEnfant ,null , {'label_attr': {'class': 'col-sm-4 col-form-label'}}) }}
                                <div class="col-sm-7">
                                    {{ form_widget(edit_form.prenomEnfant , {'attr': {'class': 'form-control' , 'placeholder': 'Prenom' }}) }}
                                </div>
                                {{ form_errors(edit_form.prenomEnfant) }}
                            </div>

                            <div class="form-group row">
                                {{ form_label(edit_form.idClasse ,null , {'label_attr': {'class': 'col-sm-4 col-form-label'}}) }}
                                <div class="col-sm-7">
                                    {{ form_widget(edit_form.idClasse, {'attr': {'class': 'form-control' , 'placeholder': 'Classe' }}) }}
                                </div>
                                {{ form_errors(edit_form.idClasse) }}
                            </div>

                            <div class="form-group row">
                                {{ form_label(edit_form.datenEnfant ,null , {'label_attr': {'class': 'col-sm-4 col-form-label'}}) }}
                                <div class="col-sm-7">
                                    {{ form_widget(edit_form.datenEnfant , {'attr': {'class': 'form-control' , 'placeholder': 'Date de naissance' }}) }}
                                </div>
                                {{ form_errors(edit_form.datenEnfant) }}
                            </div>
                            <div class="form-group row">
                                {{ form_label(edit_form.idGarde ,null , {'label_attr': {'class': 'col-sm-4 col-form-label'}}) }}
                                <div class="col-sm-7">
                                    {{ form_widget(edit_form.idGarde, {'attr': {'class': 'form-control' , 'placeholder': 'Garderie' }}) }}
                                </div>
                                {{ form_errors(edit_form.idGarde) }}
                            </div>
                            <div class="form-group row">
                                {{ form_label(edit_form.idParent,null , {'label_attr': {'class': 'col-sm-4 col-form-label'}}) }}
                                <div class="col-sm-7">
                                    {{ form_widget(edit_form.idParent, {'attr': {'class': 'form-control' , 'placeholder': 'L\'enfant de  ' }}) }}
                                </div>
                                {{ form_errors(edit_form.idParent) }}
                            </div>

                            <div class="button-list d-flex justify-content-start">
                                {{ form_widget(edit_form) }}
                                <input type="submit" class="btn btn-primary waves-effect waves-light mr-1" value="Modifier">
                                {{ form_end(edit_form) }}
                                {{ form_start(delete_form) }}
                                <input type="submit" class="btn btn-danger waves-effect width-md waves-light" value="Supprimer">
                                {{ form_end(delete_form) }}
                                <a class="btn btn-secondary waves-effect waves-light" href="{{ path('enfant_index') }}"> Retour </a>
                            </div>


                        </div> <!-- end card-box -->
                    </div><!-- end col -->
                </div>
                <!-- end row -->
            </div> <!-- container-fluid -->

        </div> <!-- content -->
    </div>

{% endblock %}
