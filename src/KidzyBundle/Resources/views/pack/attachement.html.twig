                                    <input type="text" class="form-control input-sm" placeholder="Some text value...">
                                </div>
                            </div>
                        </div>
                    </div>
                </div><!-- end col -->
            {% endfor %}


        </div>
        <!-- end row -->
    </div>
{% endblock %}
